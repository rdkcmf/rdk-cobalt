import("//build/toolchain/gcc_toolchain.gni")
import("//third_party/starboard/rdk/shared/toolchain/toolchain.gni")

gcc_toolchain("host") {
  cc = "gcc"
  cxx = "g++"
  ld = cxx
  ar = "ar"
  nm = "nm"

  extra_cflags = "-O2"
  extra_cxxflags = extra_cflags

  toolchain_args = {
    current_os = "linux"
    current_cpu = "x86"
    is_clang = false
  }
}

gcc_toolchain("target") {
  cc = rdk_toolchain_cc
  cxx = rdk_toolchain_cxx
  ld = rdk_toolchain_ld
  ar = rdk_toolchain_ar
  nm = rdk_toolchain_nm

  extra_cflags = rdk_toolchain_cflags
  extra_asmflags = rdk_toolchain_asmflags
  extra_cxxflags = rdk_toolchain_cxxflags
  extra_ldflags = rdk_toolchain_ldflags

  toolchain_args = {
    is_clang = false
  }
}
